@model IEnumerable<BikeStores.Models.Product>

@{
    ViewData["Title"] = @ViewBag.Header;
}

<h1>@ViewBag.Header</h1>

<!-- Barra di ricerca -->
<form asp-action="Index" method="get">
    <p>
        Search by name: <input type="text" name="searchString" value="@ViewData["CurrentFilter"]" />
        <input type="submit" value="Search" class="btn btn-primary" />
    </p>
</form>

<table class="table">
    <thead>
        <tr>
            <th>
                Product Name
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Brand)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Category)
            </th>
            <th>
                List Price
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.ProductName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Brand.BrandName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Category.CategoryName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ListPrice)
            </td>
            <td>
                @*<a asp-action="Edit" asp-route-id="@item.ProductId">Edit</a> |
                <a asp-action="Delete" asp-route-id="@item.ProductId">Delete</a> |*@
                <a asp-action="Details" asp-route-id="@item.ProductId">Details</a> |
                <a asp-action="ProductAvailability" asp-controller="Stocks" asp-route-id="@item.ProductId">Availability</a>
            </td>
        </tr>
}
    </tbody>
</table>
